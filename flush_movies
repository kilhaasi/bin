. /root/bin/.config
cd $IN
counter=0
until [ $counter = 64 ]
do
let counter=$counter+1
 rename " " "_" *
done

clear
echo "============== Video Files ====================="
echo
ls -lh 

for datei in $(ls )
do
 mkdir flush_movies 2>/dev/null
 echo $datei
 read zielname
 if [ $zielname != "x" ]
 then
  mv -v $datei flush_movies/$zielname
 fi
done

echo "============== Video Files ====================="
cd flush_movies
ls -lh
mv -v * $MOVIES
cd -
rmdir flush_movies
